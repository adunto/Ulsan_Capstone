<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="439dp"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:foregroundTint="#FFFFFF"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/password_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="12dp"
        android:foregroundTint="#FFFFFF"
        android:tint="#FFFEFE"
        app:layout_constraintEnd_toStartOf="@+id/textEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mailaddress_icon" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="263dp"
        android:layout_height="47dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="47dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="263dp"
        android:layout_height="47dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="47dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="＊＊＊＊＊＊＊"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <Button
        android:id="@+id/login_button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="111dp"
        android:text="시작하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassword" />

    <ImageView
        android:id="@+id/kakaotalkIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="79dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/facebookIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/kakaotalk_icon" />

    <ImageView
        android:id="@+id/facebookIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="79dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/googleIcon"
        app:layout_constraintStart_toEndOf="@+id/kakaotalkIcon"
        app:srcCompat="@drawable/facebook_icon" />

    <ImageView
        android:id="@+id/googleIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="79dp"
        android:background="#FDFDFD"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facebookIcon"
        app:srcCompat="@drawable/google_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>